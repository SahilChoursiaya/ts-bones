{
  "compilerOptions": {
    "incremental": true,
    "target": "es2016",
    "module": "commonjs",
    "baseUrl": "./src",
    "paths": {
      "@domain/*": ["domain/*"],
      "@data/*": ["data/*"],
      "@presentation/*": ["presentation/*"],
      "@main/*": ["main/*"],
      "@test/*": ["../test/*"]
    },
    "rootDirs": ["src", "test"],
    "sourceMap": true,
    "outDir": "./dist",
    "newLine": "lf",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
